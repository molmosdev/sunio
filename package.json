        }
      }
    ]
  },
  "private": true,
  "dependencies": {
    "@angular/cdk": "^20.2.10",
    "@angular/common": "^21.0.0-next.9",
    "@angular/compiler": "^21.0.0-next.9",
    "@angular/core": "^21.0.0-next.9",
    "@angular/forms": "^21.0.0-next.9",
    "@angular/platform-browser": "^21.0.0-next.9",
    "@angular/router": "^21.0.0-next.9",
    "@basis-ng/primitives": "^0.0.1-alpha.115",
    "@basis-ng/styles": "^0.0.1-alpha.133",
    "@ng-icons/core": "^32.2.0",
    "@ng-icons/lucide": "^32.2.0",
    "@tailwindcss/postcss": "^4.1.16",
    "postcss": "^8.5.6",
    "rxjs": "~7.8.0",
    "tailwindcss": "^4.1.16",
    "tslib": "^2.3.0"
